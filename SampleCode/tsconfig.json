{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "baseUrl": "."
  },
  "include": ["components/**/*.tsx", "components/**/*.ts", "styles/**/*.ts", "styles/**/*.tsx", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
